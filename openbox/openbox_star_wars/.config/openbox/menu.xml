<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu xmlns="http://openbox.org/"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://openbox.org/
                file:///usr/share/openbox/menu.xsd">

<menu id="root-menu" label="Openbox 3">
    
    <separator label="Accessories" />
    
            <item label="Firefox">
            <action name="Execute">
                <command>firefox</command>
                <startupnotify>
                    <enabled>yes</enabled>
                    <wmclass>Code</wmclass>
                </startupnotify>
            </action>
        </item>
        <item label="Telegram">
            <action name="Execute">
                <command>telegram-desktop</command>
                <startupnotify>
                    <enabled>yes</enabled>
                    <wmclass>Code</wmclass>
                </startupnotify>
            </action>
        </item>
    <separator/>
            <item label="Kitty">
            <action name="Execute">
                <command>kitty</command>
                <startupnotify>
                    <enabled>yes</enabled>
                    <wmclass>Code</wmclass>
                </startupnotify>
            </action>
        </item>
        <item label="Nemo">
            <action name="Execute">
                <command>nemo</command>
                <startupnotify>
                    <enabled>yes</enabled>
                    <wmclass>Code</wmclass>
                </startupnotify>
            </action>
        </item>
    <separator/>
            <item label="Steam">
            <action name="Execute">
                <command>steam</command>
                <startupnotify>
                    <enabled>yes</enabled>
                    <wmclass>Code</wmclass>
                </startupnotify>
            </action>
        </item>
    <separator/>
  <menu id="applications-menu" label="Applications" execute="/usr/bin/obamenu"/>
  
        <menu id="apps-term-menu" label="Graphics">
        <separator label="Graphics apps" />
        <item label="Blender">
            <action name="Execute">
                <command>blender</command>
            </action>
        </item>
        <item label="Inkscape">
            <action name="Execute">
                <command>inkscape</command>
            </action>
        </item>
        <item label="Gimp">
            <action name="Execute">
                <command>gimp</command>
            </action>
        </item>
        <item label="Krita">
            <action name="Execute">
                <command>krita</command>
            </action>
        </item>
    <separator/>
    <item label="Scrot">
        <action name="Execute">
            <command>scrot</command>
            <startupnotify>
        <enabled>yes</enabled>
    </startupnotify>
    </action>
  </item>
  <item label="Scrot 5s">
    <action name="Execute">
      <command>scrot -d 5</command>
      <startupnotify>
        <enabled>yes</enabled>
      </startupnotify>
    </action>
  </item>
    </menu>


<menu id="system-menu" label="System">
        <separator label="System apps" />
  <item label="Lxappearance">
    <action name="Execute">
      <command>lxappearance</command>
      <startupnotify><enabled>yes</enabled></startupnotify>
    </action>
  </item> 
    <item label="Obconf">
    <action name="Execute">
      <command>obconf</command>
      <startupnotify><enabled>yes</enabled></startupnotify>
    </action>
  </item> 
  <item label="Tint2conf">
    <action name="Execute">
      <command>tint2conf</command>
      <startupnotify><enabled>yes</enabled></startupnotify>
    </action>
  </item>
  <separator />
  <item label="Pcmanfm --desktop-pref">
    <action name="Execute">
      <command>pcmanfm --desktop-pref</command>
      <startupnotify><enabled>yes</enabled></startupnotify>
    </action>
  </item>
  <item label="Nitrigen">
    <action name="Execute">
      <command>nitrogen</command>
      <startupnotify><enabled>yes</enabled></startupnotify>
    </action>
  </item>
  <item label="Xscreensaver">
    <action name="Execute">
      <command>xscreensaver-demo </command>
      <startupnotify><enabled>yes</enabled></startupnotify>
    </action>
  </item>
  <separator />
  <item label="Reconfigure Openbox">
    <action name="Reconfigure" />
  </item>
</menu>

  
  
  <separator />
  <item label="Restart">
    <action name="Restart" />
  </item>
  <separator />
  <item label="Exit">
    <action name="Exit" />
  </item>
</menu>

</openbox_menu>
